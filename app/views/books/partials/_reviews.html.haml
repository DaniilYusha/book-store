%h3.in-gold-500.mb-25 #{t 'book_page.reviews'} (#{reviews.count})
- reviews.each do |review|
  .general-message-wrap.divider-lg
    .clearfix
      %span.img-circle.logo-size.inlide-block.pull-left.logo-empty= review.user.email.first
      .ml-70
        %div
          .general-message-date.hidden-xs= review.creation_date
          .max-240
            - if review.is_verified
              .general-message-verified.pull-right= t 'book_page.verified_reviewer'
            .general-message-name= review.user.email
        .mb-15
          - Review::RATING_RANGE.each do |index|
            - if index <= review.rating
              %i.fa.fa-star.rate-star
            - else
              %i.fa.fa-star.rate-star.rate-empty
        %p.reviwer-message= review.text
