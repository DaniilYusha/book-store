.mb-120.books-list
  - books.each do |book|
    .col-xs-6.col-sm-3.book
      .general-thumb-wrap
        .thumbnail.general-thumbnail
          - if book.title_image.attached?
            = image_tag(book.title_image, class: 'img-shadow general-thumbnail-img')
          - else
            %span.unknown-book-image.general-thumbnail-img= t(:no_title_image)
          .thumb-hover
            .general-thumb-link-wrap
              = link_to book_path(book), class: 'thumb-hover-link' do
                %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
              = link_to cart_items_path(cart_item: { quantity: 1, book_id: book.id }), method: :post, class: 'thumb-hover-link' do
                %i.fa.fa-shopping-cart.thumb-icon
      .general-thumb-info
        %p.title= book.title
        %p.font-16.in-gold-500= book.price_with_currency
        %span.divider-sm
        %p.lead.small= book.authors_list
  = render partial: 'books/partials/pagination', locals: { books: books, current_category: current_category }
