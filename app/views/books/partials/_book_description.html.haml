.row.book-description
  .col-sm-6
    .product-gallery
      .mb-20
        = image_tag(book.title_image_url(:w550))
      .images.clearfix
        - book.book_images.each do |book_image|
          %a.img-link
            = image_tag(book_image.image_url(:w170))
  .col-sm-6
    %h1.mt-res-0= book.title
    %p.lead.small= book.authors_list
    .row
      .col-xs-12.col-md-4
        %p.h1.in-gold-500.mt-10= number_to_currency(book.price)
      .col-xs-5.col-md-3
        .input-group.general-position
          %a.input-link{href: "#"}
            %i.fa.fa-minus.line-height-40
          %input.form-control.quantity-input{type: "text"}
          %a.input-link{href: "#"}
            %i.fa.fa-plus.line-height-40
      .col-xs-7.col-md-5
        %button.btn.btn-default.pull-right.general-position= t :add_to_cart
    .general-info-wrap.divider-lg
      %p= t 'book_page.description'
      %p.lead.small.line-height-2
        %span.less-description= book.short_description
        - if book.description.length > book.short_description.length
          %span.more-description= book.description
          %a.read-more.in-gold-500{href: "#", for: 'more'}= t 'links.read_more'
          %a.read-less.in-gold-500{href: "#", for: 'less'}= t 'links.hide'
    .general-info-wrap.divider-lg
      .clearfix
        %p.pull-left= t 'book_page.publication_year'
        %p.lead.small.pull-right.publication_year= book.published_at.year
    .general-info-wrap.divider-lg
      .clearfix
        %p.pull-left= t 'book_page.dimensions'
        %p.lead.small.pull-right.dimensions= book.dimensions
    .general-info-wrap.divider-lg
      .clearfix
        %p.pull-left= t 'book_page.materials'
        %p.lead.small.pull-right.materials= book.materials_list
