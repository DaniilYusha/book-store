%main.container
  .row
    .col-md-5.mb-40
      .text-center
        %h3.general-subtitle= t('checkout.returning_customer')
        %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
          %i.fab.fa-facebook-square
        %p.general-login-text= t(:or)
      = simple_form_for(:user, url: session_path(:user), html: { class: 'general-form' }) do |f|
        .mb-40
          %p.mb-15= t('checkout.log_in_with_password')
          = f.input :email
          = f.input :password
          = link_to t('links.forgot_password'), new_password_path(:user), class: 'help-block in-gold-500'
        = f.button :submit, t('checkout.log_in_with_password')
    .col-md-5.col-md-offset-1.mb-60
      .text-center
        %h3.general-subtitle= t('checkout.new_customer')
        %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
          %i.fab.fa-facebook-square
        %p.general-login-text= t(:or)
      = simple_form_for(:user, url: registration_path(:user), html: { class: 'general-form' }) do |f|
        .mb-40
          %p.mb-5= t('checkout.quick_register')
          %p.general-info-text.font-12.mb-20= t('checkout.create_password_later')
          = f.input :email
        = f.button :submit, t('checkout.continue_to_checkout')
