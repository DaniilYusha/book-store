#slider.carousel.slide{'data-ride': "carousel"}
  %ol.carousel-indicators
    - newest_books.length.times do |index|
      %li{class: ('active' if index.zero?), 'data-target': "#slider", 'data-slide-to': index}
  .carousel-inner{role: "listbox"}
    - newest_books.each_with_index do |book, index|
      .item{class: ('active' if index.zero?)}
        .row
          .col-sm-5
            .general-img-wrap
              = image_tag(book.title_image_url(:w210), class: 'img-shadow general-thumbnail-img')
          .col-sm-7
            .mb-60
              %h1= book.title
              %p.lead= book.description
              %p.lead.small= book.authors_list
            .general-align
              = link_to t('buttons.buy_now'), order_items_path(order_item: { quantity: 1, book_id: book.id }), method: :post, class: 'btn btn-primary'
  %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
    %span.icon-prev{'aria-hidden': "true"}
    %span.sr-only= t 'home_page.slider.prev'
  %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
    %span.icon-next{'aria-hidden': "true"}
    %span.sr-only= t 'home_page.slider.next'
