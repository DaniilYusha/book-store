%table.table.table-hover
  %tr.no-hover
    %th.col-pic.pl-0
      %span.in-grey-600= t('cart.product')
    %th.col-title
    %th.col-price
      %span.in-grey-600= t('cart.price')
    %th.col-quantity
      %span.in-grey-600= t('cart.quantity')
    %th.col-total
      %span.in-grey-600= t('cart.sub_total')
    %th.col-close
  - cart_items.each do |item|
    %tr
      %td
        .general-img-wrap-table
          = link_to book_path(item.book) do
            = image_tag(item.book.title_image_url(:w210), class: 'cart-img-shadow pull-left')
      %td
        = link_to item.book.title, book_path(item.book), class: 'title'
      %td
        %span.price.font-16.in-gold-500= number_to_currency(item.book.price)
      %td
        .input-group.quantity-controller
          = link_to cart_item_path(item, cart_item: { quantity: UpdateCartService::DECREMENT }), method: :patch, id: 'minus', class: 'input-link' do
            %i.fa.fa-minus.line-heaght-40
          %input.form-control.quantity-input{type: "text", value: item.quantity}
          = link_to cart_item_path(item, cart_item: { quantity: UpdateCartService::INCREMENT }), method: :patch, id: 'plus', class: 'input-link' do
            %i.fa.fa-plus.line-heaght-40
      %td
        %span.sub-total.font-16.in-gold-500= number_to_currency(item.subtotal_price)
      %td
        = link_to cart_item_path(item.id), method: :delete, class: 'close general-cart-close', 'aria-label': 'Close' do
          %span{'aria-hidden': 'true'} &times;
