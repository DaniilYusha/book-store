= semantic_form_for [:admin, @book], builder: ActiveAdmin::FormBuilder do |f|
  = render partial: 'admin/shared/errors', locals: { object: @service }
  = f.inputs 'Details' do
    = f.input :category
    = f.input :authors, collection: Author.all.decorate, required: true
    = f.input :title, required: true
    = f.input :description, required: true
    = f.input :price, required: true
    = f.input :published_at, as: :datepicker, required: true
    = f.input :height, required: true
    = f.input :width, required: true
    = f.input :depth, required: true
    = f.input :materials, required: true
    = f.input :title_image, as: :file, required: true
    = f.input :images, as: :file, required: true, input_html: { multiple: true }
  = f.actions do
    = f.action :submit
    = f.cancel_link
