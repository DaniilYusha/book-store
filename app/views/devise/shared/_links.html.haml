- if controller_name != 'sessions'
  %p.general-sign-text.text-center
    = t 'links.have_account'
    = link_to t('links.log_in'), new_session_path(resource_name), class: 'in-gold-500'
  %br

- if devise_mapping.registerable? && controller_name != 'registrations'
  %p.general-sign-text.text-center
    = t 'links.no_account'
    = link_to t('links.sign_up'), new_registration_path(resource_name), class: 'in-gold-500'
  %br

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %p.general-sign-text.text-center
    = link_to t('links.no_confirmation_email'), new_confirmation_path(resource_name), class: 'in-gold-500'
  %br
