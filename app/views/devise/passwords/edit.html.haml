%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t 'devise.passwords.edit.header'
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'general-form' }) do |f|
    = f.hidden_field :reset_password_token
    .form-group.mb-30
      = f.label :password, t('devise.passwords.edit.labels.new_password'), class: 'control-label input-label'
      = render "devise/shared/error_messages", resource: resource, error_field: :password
      = f.password_field :password, id: 'password', class: 'form-control', autofocus: true, placeholder: t('devise.passwords.edit.placeholders.enter_password')
    .form-group.mb-30
      = f.label :password_confirmation, t('devise.passwords.edit.labels.confirm_password'), class: 'control-label input-label'
      = render "devise/shared/error_messages", resource: resource, error_field: :password_confirmation
      = f.password_field :password_confirmation, id: 'password_confirmation', class: 'form-control', placeholder: t('devise.passwords.edit.placeholders.confirm_password')
    .text-center
      = f.submit t('buttons.change_password'), class: 'btn btn-default mb-20'
  = render "devise/shared/links"
