%main.container
  %h1.general-title-margin= t('devise.registrations.edit.header')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= t('devise.registrations.edit.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= t('devise.registrations.edit.privacy')
  .tab-content
    #address.tab-pane.fade.in.active{role: "tabpanel"}
      = render partial: 'devise/registrations/partials/address', locals: { countries: @countries }
    #privacy.tab-pane.fade{role: "tabpanel"}
      = render partial: 'devise/registrations/partials/privacy'
