%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t 'devise.registrations.new.header'
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
      %i.fab.fa-facebook-square
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'general-form' }) do |f|
    .form-group.mb-30
      = f.label :email, t('devise.registrations.new.labels.email'), class: 'control-label input-label'
      = render "devise/shared/error_messages", resource: resource, error_field: :email
      = f.email_field :email, id: 'email', class: 'form-control', autofocus: true, placeholder: t('devise.registrations.new.placeholders.enter_email')
    .form-group.mb-30
      = f.label :password, class: 'control-label input-label'
      = render "devise/shared/error_messages", resource: resource, error_field: :password
      = f.password_field :password, id: 'password', class: 'form-control', placeholder: t('devise.registrations.new.placeholders.enter_password')
    .form-group.mb-30
      = f.label :password_confirmation, t('devise.registrations.new.labels.confirm_password'), class: 'control-label input-label'
      = render "devise/shared/error_messages", resource: resource, error_field: :password_confirmation
      = f.password_field :password_confirmation, id: 'confirm', class: 'form-control', placeholder: t('devise.registrations.new.placeholders.confirm_password')
    .text-center
      = f.submit t('buttons.sign_up'), class: 'btn btn-default mb-20'
  = render "devise/shared/links"
