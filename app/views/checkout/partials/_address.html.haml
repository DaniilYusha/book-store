= render 'checkout/partials/steps'
= simple_form_for(presenter.billing_address, url: checkout_path, method: :put, class: 'res-mb-100') do |form|
  .hidden-xs.hidden-sm
    .row
      .col-md-5
        %h3.general-subtitle= t('devise.registrations.edit.billing_address')
        %p.general-info-text all fields are required
      .col-md-5.col-md-offset-1
        %h3.general-subtitle= t('devise.registrations.edit.shipping_address')
  .row
    .col-md-5.mb-40
      .visible-xs.visible-sm
        %h3.general-subtitle= t('devise.registrations.edit.billing_address')
        %p.general-info-text all fields are required
      = form.simple_fields_for :billing_form, presenter.billing_address do |f|
        = render partial: 'settings/partials/forms/fields', locals: { form: f, address_type: :billing, errors: presenter.billing_errors, countries: presenter.countries }
    .col-md-5.col-md-offset-1.mb-60
      .visible-xs.visible-sm
        %h3.general-subtitle= t('devise.registrations.edit.shipping_address')
      = form.simple_fields_for :shipping_form, presenter.shipping_address do |f|
        = render partial: 'settings/partials/forms/fields', locals: { form: f, address_type: :shipping, errors: presenter.shipping_errors, countries: presenter.countries }
      .form-group.checkbox
        %label.checkbox-label
          %input.checkbox-input{type: "checkbox", hidden: "true", name: 'use_billing_address'}
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text Use Billing Adress
  .general-text-align.mb-60
    = render partial: 'checkout/partials/order_summary', locals: { order: order }
    = form.button :submit, 'Save and Continue', class: 'center-block'
