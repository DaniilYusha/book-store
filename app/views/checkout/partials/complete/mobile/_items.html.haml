- order.order_items.each do |item|
  .general-cart-item.divider-lg.mb-55
    .general-img-wrap-table
      = image_tag(item.book.title_image_url(:w210), class: 'cart-img-shadow')
    %p.title= item.book.title
    %p.in-grey-600.fw-300= item.book.short_description
    %table.table
      %tr
        %td
          %span.in-grey-600= t('checkout.confirm.price')
        %td
          %span.font-16.in-gold-500= number_to_currency(item.book.price)
      %tr
        %td.vertical-middle
          %span.in-grey-600= t('checkout.confirm.quantity')
        %td
          %span= item.quantity
      %tr
        %td
          %span.in-grey-600= t('checkout.confirm.total')
        %td
          %span.font-16.in-gold-500= number_to_currency(item.subtotal_price)
