%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t :brand
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            %a{href: root_path}= t 'links.home'
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}= t 'links.shop'
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - categories.each do |category|
                %li
                  %a.collapse-link{href: books_path(category_id: category.id)}= category.name
          - if user_signed_in?
            %li
              %a{type: "button", 'data-toggle': "collapse", href: "#menu_account", 'aria-expanded': "false", 'aria-controls': "menu"}= t 'links.my_account'
              %ul#menu_account.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
                %li
                  %a.collapse-link{href: '#'}= t 'links.orders'
                %li
                  %a.collapse-link{href: edit_user_registration_path}= t 'links.settings'
            %li
              = link_to t('links.log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              %a{href: new_user_session_path}= t 'links.log_in'
            %li
              %a{href: new_user_registration_path}= t 'links.sign_up'
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            %a.home_link{href: root_path}= t 'links.home'
          %li.dropdown
            %a.shop_link.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t 'links.shop'
            %ul.dropdown-menu
              - categories.each do |category|
                %li
                  %a{href: books_path(category_id: category.id)}= category.name
          - if user_signed_in?
            %li
              %a.my_account_link.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t 'links.my_account'
              %ul.dropdown-menu
                %li
                  %a{href: '#'}= t 'links.orders'
                %li
                  %a{href: edit_user_registration_path}= t 'links.settings'
                %li.divider{role: "separator"}
                %li
                  = link_to t('links.log_out'), destroy_user_session_path, method: :delete, class: 'log_out_link'
          - else
            %li
              %a.log_in_link{href: new_user_session_path}= t 'links.log_in'
            %li
              %a.sign_up_link{href: new_user_registration_path}= t 'links.sign_up'
