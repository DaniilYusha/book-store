%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t :brand
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            %a{href: root_path}= t 'links.home'
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}= t 'links.shop'
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                %a.collapse-link{href: "#"}= t 'links.mobile_development'
              %li
                %a.collapse-link{href: "#"}= t 'links.photo'
              %li
                %a.collapse-link{href: "#"}= t 'links.web_design'
          %li
            %a{href: "#"}= t 'links.my_account'
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            %a.home_link{href: root_path}= t 'links.home'
          %li.dropdown
            %a.shop_link.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t 'links.shop'
            %ul.dropdown-menu
              %li
                %a.mobile_development_link{href: "#"}= t 'links.mobile_development'
              %li
                %a.photo_link{href: "#"}= t 'links.photo'
              %li
                %a.web_design_link{href: "#"}= t 'links.web_design'
              %li.divider{role: "separator"}
              %li
                %a.log_out_link{href: "#"}= t 'links.log_out'
          %li
            %a.my_account_link{href: "#"}= t 'links.my_account'
